{
  "name": "zhconv-web",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "npm run build:wasm && vite",
    "build:wasm": "npm run build:wasm-opencc && npm run build:wasm-default",
    "build:wasm-opencc": "cd .. && wasm-pack build --release -d web/pkg-opencc -- --features opencc --features wasm",
    "build:wasm-default": "cd .. && wasm-pack build --release -d web/pkg-default -- --features wasm",
    "build": "npm run build:wasm && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "format": "yarn prettier -w src/ && yarn eslint --fix src/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "vite": "^7.3.1",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  }
}
